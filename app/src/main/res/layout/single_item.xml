<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/car_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/car_picture"
        android:layout_toEndOf="@+id/car_picture">

        <TextView
            android:id="@+id/car_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/car_picture"
            android:paddingTop="20dp"
            android:text="upperText"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/car_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_title"
            android:layout_toRightOf="@+id/car_picture"
            android:paddingBottom="20dp"
            android:text="downText"
            android:textSize="14sp"
            android:maxLines="2"
            android:minLines="1"/>
    </LinearLayout>

</RelativeLayout>



